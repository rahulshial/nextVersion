{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "types": ["jest", "node", "@types/jest"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**.*",
    "src/__tests__",
    "jest.config.ts"
  ]
}